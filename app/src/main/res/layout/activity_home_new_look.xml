                                    android:onClick="goToCardTransfer"
                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textSize="12sp"
                                    android:text="@string/title_card_to_card_transfer"/>
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:visibility="gone"
                            android:layout_margin="4dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageButton
                                    android:elevation="8dp"
                                    android:onClick="goToBalanceInquiry"
                                    android:background="@drawable/ripple_icon"
                                    android:src="@drawable/ic_balance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:padding="8dp"
                                    android:onClick="goToBalanceInquiry"
                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textSize="12sp"
                                    android:text="Inquiry"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageButton
                                    android:elevation="8dp"
                                    android:background="@drawable/ripple_icon"
                                    android:src="@drawable/ic_creditcard"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:padding="8dp"
                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textSize="12sp"
                                    android:text="Cards"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageButton
                                    android:elevation="8dp"
                                    android:onClick="goToCards"
                                    android:background="@drawable/ripple_icon"
                                    android:src="@drawable/ic_creditcard"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:padding="8dp"
                                    android:onClick="goToCards"
                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textSize="12sp"
                                    android:text="Cards"/>
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_margin="4dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:elevation="8dp"
                                    android:onClick="goToTopup"
                                    android:src="@drawable/ic_d_sim"
                                    android:scaleType="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:padding="8dp"
                                    android:onClick="goToTopup"
                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textSize="12sp"
                                    android:text="@string/title_top_up"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:elevation="8dp"
                                    android:onClick="goTOHighEducation"
                                    android:src="@drawable/ic_d_eduction"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:padding="8dp"
                                    android:gravity="center"
                                    android:onClick="goTOHighEducation"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textSize="12sp"
                                    android:text="@string/high_education"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:elevation="8dp"
                                    android:onClick="goToE15"
                                    android:src="@drawable/ic_d_e15"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:padding="8dp"
                                    android:onClick="goToE15"
                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textSize="12sp"
                                    android:text="@string/e15"/>
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_margin="4dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:elevation="8dp"
                                    android:onClick="goToBillInquiry"
                                    android:src="@drawable/ic_d_bill_payment"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:padding="8dp"
                                    android:gravity="center"
                                    android:onClick="goToBillInquiry"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textSize="12sp"
                                    android:text="@string/title_bill_iquery"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:elevation="8dp"
                                    android:onClick="goToGenerateVoucher"
                                    android:src="@drawable/ic_d_voucher"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                     />
                                <TextView
                                    android:padding="8dp"
                                    android:onClick="goToGenerateVoucher"
                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textSize="12sp"
                                    android:text="@string/generate_vucher"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:elevation="8dp"
                                    android:onClick="goToGenerateOTP"
                                    android:src="@drawable/ic_d_key"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    />
                                <TextView
                                    android:padding="8dp"
                                    android:onClick="goToGenerateOTP"
                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textSize="12sp"
                                    android:text="@string/generate_ipin"/>
                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_margin="4dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:visibility="visible"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageButton
                                    android:elevation="8dp"
                                    android:onClick="goToFavourite"
                                    android:background="@drawable/ripple_icon"
                                    android:src="@drawable/ic_favourite_contact"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:padding="8dp"
                                    android:onClick="goToFavourite"
                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textSize="12sp"
                                    android:text="@string/favourite"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:elevation="8dp"
                                    android:onClick="goToSettings"
                                    android:src="@drawable/ic_d_setting"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
