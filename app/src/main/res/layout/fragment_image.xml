<?xml version="1.0" encoding="utf-8"?>
<sd.rittal.app.utilites.CarouselLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical">




    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/pagerImg"
        android:layout_width="320dp"
        android:layout_height="140dp"
        android:padding="16dp"
        android:gravity="center_horizontal"
        android:background="@drawable/card_shape" >

        <TextView
            android:id="@+id/card_name"
            android:text="text"
            android:padding="8dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/card_pan"
            android:text="text"
            android:padding="8dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/card_expiry_date"
            android:text="text"
            android:padding="8dp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>






</sd.rittal.app.utilites.CarouselLinearLayout>

